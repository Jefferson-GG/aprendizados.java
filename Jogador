public class Jogador {

    private final int maxVidas=3;
    private int num=0;
    private int vidas=0;
    
    public Jogador(int num){
        this.num=num;
        this.vidas=1;
        System.out.printf("Jogador %d criado! %n",num);
    }
    
    public int getvidas(){
        return this.vidas;
    }
    public void addVidas(){
        if(this.vidas < maxVidas){
            this.vidas++;
        }          
    }
}
